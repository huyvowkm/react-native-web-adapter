{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "rootDir": "."
  },
  "include": ["packages/*/src", "packages/index"]
}
